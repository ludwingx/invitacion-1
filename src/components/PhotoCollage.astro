const { photos } = Astro.props; // Mantener esta línea si usas props
---

<div class="photo-collage">
    <div class="photo-row">
        <div class="photo-box">
            <img src="/images/jtp.jpg" alt="Foto 1" class="collage-photo" />
        </div>
        <div class="photo-box">
            <img src="/images/jtp2.jpg" alt="Foto 2" class="collage-photo" />
        </div>
    </div>
    <div class="photo-row full-width">
        <div class="photo-box2">
            <img src="/images/jtp3.jpg" alt="Foto 3" class="collage-photo2" />
        </div>
    </div>
    <div class="photo-row">
        <div class="photo-box">
            <img src="/images/jtp4.jpg" alt="Foto 4" class="collage-photo" />
        </div>
        <div class="photo-box">
            <img src="/images/jtp5.jpg" alt="Foto 5" class="collage-photo" />
        </div>
    </div>
</div>

<style>
    .photo-collage {
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column; /* Apila las filas verticalmente */
        gap: 10px; /* Espacio entre las filas */
    }

    .photo-row {
        display: flex; /* Muestra las fotos en fila */
        gap: 10px; /* Espacio entre las fotos de la fila */
    }

    .photo-box {
        width: 180px; /* Ancho fijo para las cajas */
        height: 180px; /* Altura fija para las cajas */
        overflow: hidden; /* Oculta la parte de la imagen que sobresale */
        border-radius: 5px; /* Opcional, para esquinas redondeadas */
    }
    .photo-box2 {
        width: 370px; /* Ancho fijo para las cajas */
        height: 180px; /* Altura fija para las cajas */
        overflow: hidden; /* Oculta la parte de la imagen que sobresale */
        border-radius: 5px; /* Opcional, para esquinas redondeadas */
    }
    .collage-photo {
        width: 100%;
        height: 100%;
        object-fit: cover; /* Mantiene la relación de aspecto */
    }
    .collage-photo2 {
        width: 100%;
        height: 100%;
        object-fit: cover; /* Mantiene la relación de aspecto */
    }
    .full-width {
        flex: 1; /* Esta fila ocupa todo el ancho */
    }

    /* Ajustes para pantallas pequeñas */
    @media (max-width: 600px) {
        .photo-collage {
            gap: 5px; /* Reduce el espacio entre filas */
        }

        .photo-box {
            width: 140px; /* Reduce el ancho de las cajas en pantallas pequeñas */
            height: 140px; /* Reduce la altura en pantallas pequeñas */
        }

        .photo-box2 {
            width: 290px; /* Reduce el ancho de las cajas en pantallas pequeñas */
            height: 140px; /* Reduce la altura en pantallas pequeñas */
        }
    }
</style>
